{
  "name": "xpeds-sync",
  "author": "xshady",
  "private": true,
  "workspaces": [
    "shared",
    "server",
    "client"
  ],
  "scripts": {
    "dev:shared": "cd shared && yarn dev",
    "dev:server": "cd server && yarn dev",
    "dev:client": "cd client && yarn dev",
    "build:shared": "cd shared && yarn build",
    "build:server": "cd server && yarn build",
    "build:client": "cd client && yarn build",
    "dev": "concurrently 'yarn:dev:*'",
    "build": "concurrently 'yarn:build:*'",
    "types": "concurrently 'yarn:types:*'",
    "publ": "yarn build && yarn types && lerna publish"
  },
  "dependencies": {
    "@altv/types-client": "^2.3.7",
    "@altv/types-natives": "^1.4.5",
    "@altv/types-server": "^2.5.0",
    "@altv/types-shared": "^1.3.1",
    "@types/node": "^17.0.21",
    "@typescript-eslint/eslint-plugin": "^4.33.0",
    "@typescript-eslint/parser": "^4.33.0",
    "altv-xlogger": "^1.1.0",
    "altv-xsync-entity-client": "^3.2.2",
    "altv-xsync-entity-server": "^3.2.3",
    "altv-xsync-entity-shared": "^3.2.2",
    "concurrently": "^7.0.0",
    "dts-bundle-generator": "^6.9.0",
    "esbuild": "^0.14.38",
    "eslint": "^7.30.0",
    "eslint-config-standard": "^16.0.3",
    "eslint-plugin-import": "^2.24.2",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-promise": "^5.1.0",
    "lerna": "^4.0.0",
    "typescript": "^4.4.3",
    "ws-esm": "^8.2.10"
  },
  "type": "module"
}
