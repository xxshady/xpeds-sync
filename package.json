{
  "name": "xpeds-sync",
  "author": "xshady",
  "private": true,
  "workspaces": [
    "shared",
    "server",
    "client"
  ],
  "scripts": {
    "dev:shared": "cd shared && yarn dev",
    "dev:server": "cd server && yarn dev",
    "dev:client": "cd client && yarn dev",
    "build:shared": "cd shared && yarn build",
    "build:server": "cd server && yarn build",
    "build:client": "cd client && yarn build",
    "types:shared": "cd shared && yarn types",
    "types:server": "cd server && yarn types",
    "types:client": "cd client && yarn types",
    "dev": "concurrently 'yarn:dev:*'",
    "build": "concurrently 'yarn:build:*'",
    "types": "concurrently 'yarn:types:*'",
    "publ": "yarn build && yarn types && lerna publish"
  },
  "dependencies": {
    "@altv/types-client": "^2.4.2",
    "@altv/types-natives": "^1.4.8",
    "@altv/types-server": "^2.5.5",
    "@altv/types-shared": "^1.3.6",
    "@types/node": "^17.0.21",
    "@typescript-eslint/eslint-plugin": "^5.47.1",
    "@typescript-eslint/parser": "^5.47.1",
    "altv-xlogger": "^1.1.0",
    "altv-xsync-entity-client": "^3.2.7",
    "altv-xsync-entity-server": "^3.2.7",
    "altv-xsync-entity-shared": "^3.2.7",
    "concurrently": "^7.6.0",
    "dts-bundle-generator": "^6.9.0",
    "esbuild": "^0.14.38",
    "eslint": "^8.31.0",
    "eslint-config-standard": "^17.0.0",
    "eslint-plugin-import": "^2.26.0",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-promise": "^6.1.1",
    "lerna": "^6.3.0",
    "typescript": "^4.9.4",
    "ws-esm": "^8.2.10"
  },
  "type": "module"
}
